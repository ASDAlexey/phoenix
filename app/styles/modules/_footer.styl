      after()
    .copyright
      position:relative
      z-index:0
      float:left
      height:69px
      osr(14px, 69px)
      color:#fff
      padding-left:35px
      padding-top:1px
      span
        dibt()
        position:absolute
        z-index:0
        color:#fff
        osl(36px, 69px)
        left:10px
        top:50%
        tt(-50%, -50%)
    .firm-logo
      margin-top:8px
      display:block
      text-decoration:none
      white-space:nowrap
      padding-top:10px
      float:right
      > div
        dibt()
        &:first-child
          position:relative
          z-index:0
          margin-right:8px
          text-align:right
          top:-7px
          span
            display:block
            color:#fff
            font:12px / 12px Arial, sans-serif
            margin-top:2px