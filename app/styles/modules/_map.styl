.map
  height:715px
  position:relative
  z-index:0
  .result_order
    width:281px
    margin:0 auto
    font-size:0
    > *
      height:44px
      dibt()
      width:50%
      rl(16px)
      border-bottom:1px dashed #8a8c88
      position:relative
      z-index:0
      span
        dibt()
        position:absolute
        z-index:1
        top:50%
        left:0
        tt(0, -50%)
    dt
      font-size:14px
      color:#9b9b9b
    dd
      color:#51565a
  .form-validate
    width:281px
    margin:0 auto
    > div
      margin-top:18px
      display:block
      &:first-child
        margin-top:0
      &.wrapper-send
        text-align:right
      input
        border-color:#9c9d96
      label
        margin-top:4px
        color:#9b9b9b
        display:block
      button
        &:before
          sprite($calc)
          left:11px
          top:8px
  .info
    background-color:#e8e5d2
    width:370px
    position:absolute
    z-index:1
    top:0
    right:0
    height:100%
    .calc-block
      position:absolute
      z-index:1
      left:0;
      top:50%
      tt(0, -50%)
      width:100%
      .title
        after()
        margin-bottom:52px
        span
          &:first-child
            position:relative
            z-index:0
            margin-left:38px
            br(30px)
            color:#51565a
            &:after
              content:''
              position:absolute
              z-index:1
              left:-23px
              top:50%
              tt(-50%, -50%)
              sprite($chevrow_right)
          &:nth-child(2)
            cursor:pointer
            float:right
            sprite($close_calc)
            display:block
            margin:13px 44px 0 0
.footer
  .angular-google-map
    height:445px
  .angular-google-map-container
    width:100%
    height:445px
  .wrapper-footer-map
    float:left
    width:calc(100% - 357px)
.header-map
  .angular-google-map
    height:715px
  .angular-google-map-container
    width:100%
    height:715px
  .wrapper-footer-map
    float:left
    width:calc(100% - 370px)
