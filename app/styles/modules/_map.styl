.map
  height:715px
  position:relative
  z-index:0
  .info
    background-color:#e8e5d2
    width:370px
    position:absolute
    z-index:1
    top:0
    right:0
    height:100%
    .calc-block
      position:absolute
      z-index:1
      left:0;
      top:50%
      tt(0, -50%)
      .title
        position:relative
        z-index:0
        margin-left:38px
        margin-bottom:52px
        br(30px)
        color:#51565a
        &:after
          content:''
          position:absolute
          z-index:1
          left:-23px
          top:50%
          tt(-50%, -50%)
          sprite($chevrow_right)