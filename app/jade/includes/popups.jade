//popup
popup-svg(name="request").hide-block
    section.inner-popup-block
        h1.title-form(ng-if="!data.text_msg") Заявка
            button.overlay-close(rotate ng-click="closePopup('',{})")
                span
        h1.title-form(ng-if="data.text_msg")
            | {{data.text_msg}}
            button.overlay-close(rotate ng-click="closePopup('',{})")
                span
        form.form-validate(name="formValidate" ng-controller="FormCtrl" ng-init="action='./controller.php'" novalidate)
            div
                input#name1(type="text" name="name1" ng-model='dataForm.data.name' autocomplete="off" required)
                label(for="name1") Ваше имя
            div
                input#phone1(type="text" name="phone1" ng-model='dataForm.data.phone' autocomplete="off" required)
                label(for="phone1") Ваш телефон
            div
                textarea#msg1(type="text" name="msg1" ng-model='dataForm.data.msg' autocomplete="off" required)
                label(for="msg1") Сообщение
            .wrapper-send
                button.send(ng-click='send(dataForm,formValidate,action)')
                    span Отправить
            input(type="hidden" name="task" ng-init='dataForm.hidden.task="request"' ng-model='dataForm.hidden.task')
            input(ng-if="data.text_msg" type="hidden" name="text_msg" ng-init='dataForm.data.text_msg=data.text_msg' ng-model='dataForm.data.text_msg')
