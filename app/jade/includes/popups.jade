                ul
                    li(ng-if="data.product.title")
                        h2(ng-bind="data.product.title")
                    li(ng-if="data.product.mark")
                        span maрка
                        | {{data.product.mark}}
                    li(ng-if="data.product.grade_of_fuel")
                        span класс топлива
                        | {{data.product.grade_of_fuel}}
                    li(ng-if="data.product.type")
                        span вид
                        | {{data.product.type}}
                    li(ng-if="data.product.fuel") ({{data.product.fuel}})
            .wrapper-send
                button.send(ng-click='send(dataForm,formValidate,action)')
                    span Отправить
            input(type="hidden" name="task" ng-init='dataForm.hidden.task="order"' ng-model='dataForm.hidden.task')
            input(ng-if="data.product" type="hidden" name="text" ng-init='dataForm.data.product=data.product' ng-model='dataForm.data.product')
